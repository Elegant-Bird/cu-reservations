<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DirectionsActivity" >

    <LinearLayout
        android:id="@+id/Directions_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/Asheville_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/asheville_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asheville_textview_label" />

            <TextView
                android:id="@+id/ashville_directions_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lk" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Atlanta_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/atlanta_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/atlanta_textview_label" />

            <TextView
                android:id="@+id/atlanta_directions_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Charlotte_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/charlotte_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/charlotte_textview_label" />

            <TextView
                android:id="@+id/charlotte_directions_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Columbia_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/columbia_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/columbia_textview_label" />

            <TextView
                android:id="@+id/columbia_directions_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/google_maps_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google Maps Directions to the University" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>